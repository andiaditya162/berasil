<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:colorBackground">@color/secondary</item>
    </style>

    <style name="StatusBarWithColor" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/primary500</item>
        <item name="android:colorBackground">@color/secondary</item>
    </style>

    <style name="toolbar_text">
        <item name="android:fontFamily">@font/sf_pro_text_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/base950</item>
    </style>

    <style name="heading1">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/base950</item>
    </style>

    <style name="heading2">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/base950</item>
    </style>

    <style name="heading3">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/base950</item>
    </style>

    <style name="heading4">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/base950</item>
    </style>

    <style name="heading5">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/base950</item>
    </style>

    <style name="heading6">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/base950</item>
    </style>

    <style name="text_ig">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/base950</item>
    </style>

    <style name="text_base">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/base950</item>
    </style>

    <style name="text_sm">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/base950</item>
    </style>

    <style name="text_xs">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/base950</item>
    </style>

    <style name="CardCornerRadiusTop" parent="">
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerSizeTopRight">30dp</item>
    </style>

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:backgroundTint">@color/base950</item>
    </style>

    <!-- Alert Dialog -->
    <style name="ThemeOverlay.MaterialComponents.MaterialAlertDialog_Background" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Background Color-->
        <item name="android:background">@color/primary</item>
        <!-- Text Color for title and message -->
        <item name="colorOnSurface">@color/base950</item>
        <!-- Style for positive button -->
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <!-- Style for negative button -->
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <!-- text color for the button -->
        <item name="android:textColor">@color/primary500</item>
        <!-- Background tint for the button -->
        <item name="backgroundTint">@color/primary</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <!-- text color for the button -->
        <item name="android:textColor">@color/primary500</item>
        <!-- Background tint for the button -->
        <item name="backgroundTint">@color/primary</item>
    </style>

</resources>